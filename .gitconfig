[user]
    name = Sahil Katrekar
    email = sahilkatrekar@gmail.com
    username = hbdch
[core]
    editor = nvim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    pager = less
    excludesfile = ~/.gitignore
[color]
    branch = auto
    diff = auto
    interactive = auto
    pager = true
    status = auto
    ui = true
[diff]
    tool = vimdiff
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[alias]
    a = add --all
    br = branch
    ci = commit
    co = checkout
    st = status
    rb = rebase
    lg = log --graph --pretty=format:'%C(yellow)%h%C(auto)%d%Creset %s %C(white)- %an, %ar%Creset'
[push]
    autoSetupRemote = true
    default = current
    followTags = true
[column]
    ui = auto
[branch]
    sort = -committerdate
[tag]
    sort = version:refname
[fetch]
    prune = true
    pruneTags = true
    all = true
[commit]
    verbose = true
[pull]
    rebase = true
